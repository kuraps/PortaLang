<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lavender"
    tools:context=".UserReportMissingB">


    <io.github.florent37.shapeofview.shapes.ArcView
        app:shape_arc_height="50dp"
        app:shape_arc_position="bottom"
        android:layout_width="match_parent"
        android:id="@+id/view"
        android:layout_height="400dp"
        android:background="@drawable/bg_gradient_primary_blue"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <View
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:background="@drawable/bg_gradient_primary_blue"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </io.github.florent37.shapeofview.shapes.ArcView>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ScrollView
            android:scrollbars="none"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="0dp"
            android:layout_marginStart="0dp"
            android:layout_marginBottom="0dp"
            android:layout_marginEnd="0dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/txt1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="24dp"
                    android:layout_marginTop="24dp"
                    android:fontFamily="@font/mregular"
                    android:text="Missing"
                    android:textColor="#fff"
                    android:textSize="32sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/txt2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="24dp"
                    android:fontFamily="@font/mbold"
                    android:text="People"
                    android:textColor="#fff"
                    android:textSize="32sp"
                    app:layout_constraintStart_toEndOf="@+id/txt1"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:elevation="4dp"
                    android:id="@+id/constraintLayout"
                    android:layout_width="match_parent"
                    android:layout_height="180dp"
                    android:layout_marginStart="24dp"
                    android:layout_marginTop="24dp"
                    android:layout_marginEnd="24dp"
                    android:background="@drawable/bg_layout_rounded_white"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/txt1">

                    <TextView
                        android:id="@+id/textView10"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginEnd="120dp"
                        android:elevation="1dp"
                        android:fontFamily="@font/mbold"
                        android:text="@string/card_missing_ppl_photos"
                        android:textColor="@color/blackPrimary"
                        android:textSize="24sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />


                    <io.github.florent37.shapeofview.shapes.CircleView
                        android:elevation="1dp"
                        android:id="@+id/circleView"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="45dp"
                        android:layout_marginEnd="75dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:shape_circle_borderColor="@color/lavender"
                        app:shape_circle_borderWidth="2dp">

                        <ImageView
                            android:id="@+id/photos"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:layout_gravity="center_horizontal"
                            android:src="@drawable/icon_nopic" />

                    </io.github.florent37.shapeofview.shapes.CircleView>

                    <ImageView
                        android:id="@+id/imageView4"
                        android:layout_width="200dp"
                        android:layout_height="150dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/illu_ciank_picture"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent" />

                    <Button
                        android:elevation="5dp"
                        android:layout_width="100dp"
                        android:layout_height="30dp"
                        android:layout_marginStart="20dp"
                        android:layout_marginBottom="30dp"
                        android:background="@drawable/btn_blue_primary"
                        android:fontFamily="@font/mregular"
                        android:text="@string/btn_upload"
                        android:textColor="@color/whiteAbsolute"
                        android:textSize="14sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:elevation="4dp"
                    android:id="@+id/constraintLayout2"
                    android:layout_width="match_parent"
                    android:layout_height="180dp"
                    android:layout_marginStart="24dp"
                    android:layout_marginTop="24dp"
                    android:layout_marginEnd="24dp"
                    android:background="@drawable/bg_layout_rounded_white"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/constraintLayout">
                    <ImageView
                        android:paddingTop="70dp"
                        android:id="@+id/imageView5"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:src="@drawable/illu_ciank_attachment"
                        app:layout_constraintStart_toStartOf="parent" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="55dp"
                        android:orientation="horizontal"
                        android:background="@color/blackPrimary"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        android:gravity="center_vertical">


                        <TextView
                            android:id="@+id/textView12"
                            android:layout_width="250dp"
                            android:layout_height="wrap_content"
                            android:paddingStart="24dp"
                            android:paddingBottom="5dp"
                            android:paddingTop="5dp"
                            android:fontFamily="@font/mbold"
                            android:text="@string/card_missing_ppl_attach"
                            android:textColor="@color/white"
                            android:textSize="18sp"/>

                        <Button
                            android:layout_width="100dp"
                            android:layout_height="30dp"
                            android:layout_marginEnd="20dp"
                            android:background="@drawable/btn_blue_primary"
                            android:elevation="5dp"
                            android:fontFamily="@font/mregular"
                            android:text="Upload"
                            android:textColor="@color/whiteAbsolute"
                            android:textSize="14sp"/>
                    </LinearLayout>
                </androidx.constraintlayout.widget.ConstraintLayout>

                <TextView
                    android:id="@+id/txt3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="24dp"
                    android:layout_marginTop="24dp"
                    android:fontFamily="@font/mregular"
                    android:text="Fill the"
                    android:textColor="@color/blackPrimary"
                    android:textSize="32sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/constraintLayout2" />

                <TextView
                    android:layout_marginTop="24dp"
                    android:id="@+id/txt4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:fontFamily="@font/mbold"
                    android:text="Data"
                    android:textColor="@color/bluePrimary"
                    android:textSize="32sp"
                    app:layout_constraintStart_toEndOf="@+id/txt3"
                    app:layout_constraintTop_toBottomOf="@+id/constraintLayout2" />
                <LinearLayout
                    android:id="@+id/linearLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="24dp"
                    android:layout_marginTop="24dp"
                    android:layout_marginEnd="24dp"
                    android:background="@drawable/bg_layout_rounded_white"
                    android:orientation="vertical"
                    android:paddingTop="30dp"
                    android:paddingBottom="30dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/txt3">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="24dp"
                        android:layout_marginRight="24dp"
                        android:layout_marginBottom="24dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/mlight"
                            android:text="@string/tv_missname"
                            android:textColor="@color/blackPrimary"
                            android:textSize="20sp" />

                        <EditText
                            android:id="@+id/missname"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:layout_marginTop="10dp"
                            android:background="@drawable/bg_ed_selector"
                            android:fontFamily="@font/mmedium"
                            android:inputType="text"
                            android:lineSpacingExtra="2sp"
                            android:lines="1"
                            android:padding="12dp"
                            android:textColor="@color/blackPrimary" />

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="24dp"
                        android:layout_marginRight="24dp"
                        android:layout_marginBottom="24dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/mlight"
                            android:text="@string/tv_yourname"
                            android:textColor="@color/blackPrimary"
                            android:textSize="20sp" />

                        <EditText
                            android:id="@+id/yourname"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:layout_marginTop="10dp"
                            android:background="@drawable/bg_ed_selector"
                            android:fontFamily="@font/mmedium"
                            android:inputType="text"
                            android:lineSpacingExtra="2sp"
                            android:lines="1"
                            android:padding="12dp"
                            android:textColor="@color/blackPrimary" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="24dp"
                        android:layout_marginRight="24dp"
                        android:layout_marginBottom="24dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/mlight"
                            android:text="@string/tv_dateofbirth"
                            android:textColor="@color/blackPrimary"
                            android:textSize="20sp" />
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <EditText
                                android:id="@+id/date"
                                android:maxLength="15"
                                android:layout_width="220dp"
                                android:layout_height="50dp"
                                android:inputType="date"
                                android:textColorHint="@color/hintGray"
                                android:layout_marginTop="10dp"
                                android:background="@drawable/bg_ed_selector"
                                android:fontFamily="@font/mmedium"
                                android:lineSpacingExtra="2sp"
                                android:hint="@string/ed_hover_date"
                                android:lines="1"
                                android:padding="12dp"
                                android:textColor="@color/blackPrimary" />

                            <LinearLayout
                                android:orientation="vertical"
                                android:gravity="center"
                                android:id="@+id/date_btn"
                                android:layout_width="wrap_content"
                                android:layout_height="50dp"
                                android:layout_marginTop="10dp"
                                android:layout_alignParentEnd="true"
                                android:layout_marginStart="24dp"
                                android:layout_marginLeft="20dp"
                                android:layout_marginEnd="1dp"
                                android:layout_toEndOf="@+id/date"
                                android:background="@drawable/btn_green_primary">
                                <ImageView
                                    android:layout_width="30dp"
                                    android:layout_height="30dp"
                                    android:src="@drawable/ic_baseline_calendar_today_24"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/btn_calendar"
                                    android:textAlignment="center"
                                    android:textColor="@color/whiteAbsolute"
                                    android:fontFamily="@font/mlight"
                                    android:textSize="13sp"/>
                            </LinearLayout>
                        </RelativeLayout>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="24dp"
                        android:layout_marginRight="24dp"
                        android:layout_marginBottom="24dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/mlight"
                            android:text="@string/whistleblower_address"
                            android:textColor="@color/greyPrimary"
                            android:textSize="20sp" />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="210dp">
                            <io.github.florent37.shapeofview.shapes.RoundRectView
                                android:layout_marginTop="10dp"
                                app:shape_roundRect_bottomLeftRadius="20dp"
                                app:shape_roundRect_bottomRightRadius="20dp"
                                app:shape_roundRect_topLeftRadius="20dp"
                                app:shape_roundRect_topRightRadius="20dp"
                                android:layout_width="match_parent"
                                android:id="@+id/view2"
                                android:layout_height="130dp"
                                android:background="@drawable/bg_gradient_primary_blue"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent">

                                <ImageView
                                    android:scaleType="centerCrop"
                                    android:id="@+id/maps_preview"
                                    android:layout_width="match_parent"
                                    android:layout_height="130dp"
                                    android:src="@drawable/maps_dummy"/>
                            </io.github.florent37.shapeofview.shapes.RoundRectView>

                            <EditText
                                android:hint="@string/ed_hover_address"
                                android:id="@+id/maps"
                                android:layout_width="220dp"
                                android:layout_height="50dp"
                                android:layout_marginTop="160dp"
                                android:background="@drawable/bg_ed_selector"
                                android:fontFamily="@font/mmedium"
                                android:lineSpacingExtra="2sp"
                                android:lines="1"
                                android:textColorHint="@color/hintGray"
                                android:maxLength="15"
                                android:padding="12dp"
                                android:textColor="@color/blackPrimary" />

                            <LinearLayout
                                android:orientation="vertical"
                                android:gravity="center"
                                android:id="@+id/maps_btn"
                                android:layout_width="wrap_content"
                                android:layout_height="50dp"
                                android:layout_alignParentEnd="true"
                                android:layout_marginStart="24dp"
                                android:layout_marginLeft="20dp"
                                android:layout_marginTop="160dp"
                                android:layout_marginEnd="1dp"
                                android:layout_toEndOf="@+id/maps"
                                android:background="@drawable/btn_green_primary">
                                <ImageView
                                    android:layout_width="30dp"
                                    android:layout_height="30dp"
                                    android:src="@drawable/ic_baseline_map_24"/>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/btn_maps"
                                    android:textAlignment="center"
                                    android:textColor="@color/whiteAbsolute"
                                    android:fontFamily="@font/mlight"
                                    android:textSize="13sp"/>
                            </LinearLayout>

                        </RelativeLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="24dp"
                        android:layout_marginRight="24dp"
                        android:layout_marginBottom="24dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/mlight"
                            android:text="@string/tv_phone"
                            android:textColor="@color/greyPrimary"
                            android:textSize="20sp" />

                        <EditText
                            android:inputType="phone"
                            android:id="@+id/phonenumber"
                            android:digits="+0123456789"
                            android:maxLength="15"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:layout_marginTop="10dp"
                            android:textColorHint="@color/hintGray"
                            android:background="@drawable/bg_ed_selector"
                            android:fontFamily="@font/mmedium"
                            android:lineSpacingExtra="2sp"
                            android:lines="1"
                            android:hint="+62"
                            android:padding="12dp"
                            android:textColor="@color/blackPrimary" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="24dp"
                        android:layout_marginRight="24dp"
                        android:layout_marginBottom="24dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/mlight"
                            android:text="@string/email_label"
                            android:textColor="@color/greyPrimary"
                            android:textSize="20sp" />

                        <EditText
                            android:id="@+id/email"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:layout_marginTop="10dp"
                            android:background="@drawable/bg_ed_selector"
                            android:fontFamily="@font/mmedium"
                            android:hint="@string/email_hint"
                            android:lineSpacingExtra="2sp"
                            android:lines="1"
                            android:padding="12dp"
                            android:textColor="@color/blackPrimary"
                            android:textColorHint="@color/hintGray" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="24dp"
                        android:layout_marginRight="24dp"
                        android:layout_marginBottom="24dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/mlight"
                            android:text="@string/characteristic"
                            android:textColor="@color/greyPrimary"
                            android:textSize="20sp" />

                        <EditText
                            android:id="@+id/characteristic"
                            android:layout_width="match_parent"
                            android:layout_height="100dp"
                            android:layout_marginTop="10dp"
                            android:background="@drawable/bg_ed_selector"
                            android:fontFamily="@font/mmedium"
                            android:lineSpacingExtra="2sp"
                            android:padding="12dp"
                            android:textColor="@color/blackPrimary"
                            android:textColorHint="@color/hintColor" />

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="24dp"
                        android:layout_marginRight="24dp"
                        android:layout_marginBottom="24dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/mlight"
                            android:text="@string/tv_chronology"
                            android:textColor="@color/greyPrimary"
                            android:textSize="20sp" />

                        <EditText
                            android:id="@+id/chronology"
                            android:layout_width="match_parent"
                            android:layout_height="100dp"
                            android:layout_marginTop="10dp"
                            android:background="@drawable/bg_ed_selector"
                            android:fontFamily="@font/mmedium"
                            android:lineSpacingExtra="2sp"
                            android:padding="12dp"
                            android:textColor="@color/blackPrimary"
                            android:textColorHint="@color/hintGray"/>

                    </LinearLayout>
                </LinearLayout>

                <Button
                    android:id="@+id/btn1"
                    android:layout_width="250dp"
                    android:layout_height="55dp"
                    android:layout_marginTop="24dp"
                    android:layout_marginEnd="24dp"
                    android:background="@drawable/btn_blue_primary"
                    android:fontFamily="@font/mmedium"
                    android:text="@string/btn_send"
                    android:textColor="#fff"
                    android:textSize="22sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/linearLayout" />

                <LinearLayout
                    android:id="@+id/btn2"
                    android:layout_width="90dp"
                    android:layout_height="55dp"
                    android:layout_marginStart="24dp"
                    android:layout_marginTop="24dp"
                    android:layout_marginEnd="24dp"
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/btn_white_primary"
                    android:gravity="center"
                    android:orientation="vertical"
                    app:layout_constraintEnd_toStartOf="@+id/btn1"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/linearLayout">

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="28dp"
                        android:src="@drawable/ic_baseline_arrow_back_24" />
                </LinearLayout>

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="54dp"
                    android:background="#00000000"
                    app:layout_constraintTop_toTopOf="@+id/btn1"
                    tools:layout_editor_absoluteX="388dp" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </ScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>