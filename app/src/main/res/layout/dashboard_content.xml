<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:gl="http://schemas.android.com/apk/res-auto"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".FragmentHome"
    tools:showIn="@layout/app_bar_main"
    style="@style/parent.contentLayout">

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/icon_nopic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <io.github.florent37.shapeofview.shapes.CircleView
        android:id="@+id/circleView2"
        android:layout_width="60dp"
        android:layout_height="60dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:shape_circle_borderColor="@color/bluePrimary"
        app:shape_circle_borderWidth="2dp">

        <!-- YOUR CONTENT -->
        <ImageView
            android:id="@+id/avatar"
            android:layout_width="60dp"
            android:layout_height="60dp" />
    </io.github.florent37.shapeofview.shapes.CircleView>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/nestedScrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                style="@style/viewParent.headerText"
                android:fontFamily="@font/mbold"
                android:text="Dashboard" />

            <TextView
                android:id="@+id/greetings"
                style="@style/viewParent.headerText.contentText"
                android:layout_marginBottom="20dp"
                android:fontFamily="@font/mregular"
                android:text="Hi, Kuraps, Good Night!" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/city_adapter"
                android:layout_width="wrap_content"
                android:layout_height="120dp"
                app:layout_constrainedHeight="true"
                app:layout_constraintHeight_max="120dp"
                tools:listitem="@layout/fragment_home_city"
                android:layout_marginTop="10dp"/>

            <TextView
                style="@style/viewParent.headerText"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/mbold"
                android:text="Featured" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                app:cardCornerRadius="15dp"
                app:cardPreventCornerOverlap="true">

                <RelativeLayout
                    android:id="@+id/CardView0"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/dashboard_gradient"
                    android:minHeight="100dp"
                    android:padding="10dp">

                    <TextView
                        android:id="@+id/textViewSub1Title"
                        style="@style/viewParent.headerText.HomeCardTitle"
                        android:fontFamily="@font/mbold"
                        android:text="Missing People" />

                    <TextView
                        android:fontFamily="@font/mregular"
                        style="@style/viewParent.headerText.homeCardContent"
                        android:layout_below="@id/textViewSub1Title"
                        android:text="Report missing people,\nFill missing people data" />

                    <ImageView
                        style="@style/homeCardImage"
                        android:maxHeight="90dp"
                        android:src="@drawable/dashboard_icon_find" />

                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <!--if the second one is used as model for recyclerView, refer:
            https://appsnipp.com/gradient-layout-for-dynamic-gradients-in-android-without-drawable-library/
            -->

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                app:cardCornerRadius="15dp"
                app:cardPreventCornerOverlap="true">

                <net.colindodd.gradientlayout.GradientRelativeLayout
                    android:id="@+id/CardView1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:minHeight="100dp"
                    android:padding="10dp"
                    gl:end_color="@color/gradientOrange"
                    gl:orientation="LEFT_RIGHT"
                    gl:start_color="@color/gradientLightYellow">

                    <TextView
                        android:fontFamily="@font/mbold"
                        android:id="@+id/textViewSub2Title"
                        style="@style/viewParent.headerText.HomeCardTitle"
                        android:text="Found People" />

                    <TextView
                        android:fontFamily="@font/mregular"
                        style="@style/viewParent.headerText.homeCardContent"
                        android:layout_below="@id/textViewSub2Title"
                        android:text="You've found missing people?,\nfill the data for help others" />

                    <ImageView
                        style="@style/homeCardImage"
                        android:maxHeight="90dp"
                        android:src="@drawable/dashboard_icon_found" />

                </net.colindodd.gradientlayout.GradientRelativeLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                app:cardCornerRadius="15dp"
                app:cardPreventCornerOverlap="true">

                <net.colindodd.gradientlayout.GradientRelativeLayout
                    android:id="@+id/CardView2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:minHeight="100dp"
                    android:padding="10dp"
                    gl:end_color="@color/gradientLightBlue"
                    gl:orientation="LEFT_RIGHT"
                    gl:start_color="@color/gradientViolet">

                    <TextView
                        android:fontFamily="@font/mbold"
                        android:id="@+id/textViewSub5Title"
                        style="@style/viewParent.headerText.HomeCardTitle"
                        android:text="Portal News" />

                    <TextView
                        android:fontFamily="@font/mregular"
                        style="@style/viewParent.headerText.homeCardContent"
                        android:layout_below="@id/textViewSub5Title"
                        android:text="The Portal of News about\nThe Missing People in Indonesia" />

                    <ImageView
                        style="@style/homeCardImage"
                        android:maxHeight="90dp"
                        android:src="@drawable/dashboard_icon_portal" />

                </net.colindodd.gradientlayout.GradientRelativeLayout>
            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:minHeight="100dp"
                android:orientation="horizontal"
                android:weightSum="2">

                <androidx.cardview.widget.CardView
                    android:layout_marginEnd="5dp"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="15dp"
                    app:cardBackgroundColor="@color/whiteSecondary"
                    app:cardPreventCornerOverlap="true"
                    android:layout_marginTop="10dp">

                    <RelativeLayout
                        android:id="@+id/CardView3"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:minHeight="100dp">

                        <ImageView
                            android:scaleType="centerCrop"
                            android:layout_height="100dp"
                            android:layout_width="match_parent"
                            android:src="@drawable/illu_vector_settings"
                            />

                        <TextView
                            android:layout_alignParentBottom="true"
                            android:layout_height="20dp"
                            android:background="@color/blackPrimary"
                            android:id="@+id/textViewSub6Title"
                            android:fontFamily="@font/mbold"
                            android:text="SETTINGS"
                            android:textAlignment="center"
                            android:textColor="@color/whitePrimary"
                            android:layout_width="match_parent"
                            android:elevation="1dp"
                            android:textSize="16sp"/>


                    </RelativeLayout>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_marginEnd="5dp"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="15dp"
                    app:cardBackgroundColor="@color/whiteSecondary"
                    app:cardPreventCornerOverlap="true"
                    android:layout_marginTop="10dp">

                    <RelativeLayout
                        android:id="@+id/CardView4"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:minHeight="100dp">

                        <ImageView
                            android:paddingTop="20dp"
                            android:scaleType="centerCrop"
                            android:layout_height="100dp"
                            android:layout_width="match_parent"
                            android:src="@drawable/illu_ciank_sentdata"
                            />

                        <TextView
                            android:layout_alignParentBottom="true"
                            android:layout_height="20dp"
                            android:background="@color/blackPrimary"
                            android:id="@+id/textViewSub7Title"
                            android:fontFamily="@font/mbold"
                            android:text="HELP"
                            android:textAlignment="center"
                            android:textColor="@color/whitePrimary"
                            android:layout_width="match_parent"
                            android:elevation="1dp"
                            android:textSize="16sp"/>


                    </RelativeLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>


        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
