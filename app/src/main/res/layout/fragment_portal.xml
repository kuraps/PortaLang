<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    style="@style/parent.contentLayout"
    tools:context=".UserPortal">

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="32dp"
        android:src="@drawable/ic_baseline_arrow_back_24"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:fontFamily="@font/mbold"
        android:text="Portal News"
        style="@style/viewParent.headerText"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.arlib.floatingsearchview.FloatingSearchView
        android:theme="@style/SearchView"
        android:id="@+id/floating_search_view"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginTop="24dp"
        app:floatingSearch_hintTextColor="@color/blackAbsolute"
        app:floatingSearch_clearBtnColor="@color/blackAbsolute"
        app:floatingSearch_viewSuggestionItemTextColor="@color/blackAbsolute"
        app:floatingSearch_viewSearchInputTextColor="@color/blackAbsolute"
        app:floatingSearch_suggestionRightIconColor="@color/blackAbsolute"
        app:floatingSearch_menuItemIconColor="@color/blackAbsolute"
        app:floatingSearch_leftActionColor="@color/blackAbsolute"
        app:floatingSearch_dividerColor="@color/blackAbsolute"
        app:floatingSearch_actionMenuOverflowColor="@color/blackAbsolute"
        app:floatingSearch_backgroundColor="@color/btn_blue_primary"
        app:floatingSearch_viewTextColor="@color/blackAbsolute"
        app:floatingSearch_close_search_on_keyboard_dismiss="true"
        app:floatingSearch_leftActionMode="showHamburger"
        app:floatingSearch_searchHint="Search Here..."
        app:floatingSearch_showSearchKey="false"
        app:floatingSearch_suggestionsListAnimDuration="250"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView4" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/mbold"
        android:text="HOT"
        android:textColor="@color/redPrimary"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/floating_search_view" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:fontFamily="@font/mbold"
        android:text="NEWS!"
        style="@style/viewParent.headerText"
        android:textSize="24sp"
        app:layout_constraintStart_toEndOf="@+id/textView3"
        app:layout_constraintTop_toBottomOf="@+id/floating_search_view" />

        <androidx.recyclerview.widget.RecyclerView
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@+id/textView4"
            android:id="@+id/portal_adapter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            tools:listitem="@layout/fragment_portal_people"/>
</androidx.constraintlayout.widget.ConstraintLayout>